<div class="container py-5">
    <div class="d-flex">
        <div class="col-md-9 p-0">
            <h3>Companies</h3>
        </div>
        <div class="col-md-3 text-right p-0">
            <%= link_to "Create a Company", new_company_path, class: "btn btn-primary" %><br>
        </div>
    </div>

    <% if @companies.empty? %>
    <p>No Companies Found</p>
    <% else %>
    <ul class="list-group my-5">
        <% @companies.each do |company| %>
        <a href="<%= company_path(company) %>" class="list-group-item list-group-item-action my-2 text-white" style="background-color:<%= company.color || Rails.configuration.default_background_color%>">
            <%= company.name %>
        </a>
        <% end %>
    </ul>
    <% end %>
</div>